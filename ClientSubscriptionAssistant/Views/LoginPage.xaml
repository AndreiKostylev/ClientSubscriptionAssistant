<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientSubscriptionAssistant.Views.LoginPage"
             Title="Вход">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

     
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Вход в систему"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#007ACC"/>
                <Label Text="Войдите в свой аккаунт"
                       FontSize="14"
                       TextColor="Gray"/>
            </VerticalStackLayout>

       
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

              
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email или имя пользователя" FontSize="14"/>
                        <Entry Placeholder="ivanov@example.com или ivanov"
                               Text="{Binding Login}"
                               Keyboard="Default"/>
                    </VerticalStackLayout>

            
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Пароль" FontSize="14"/>
                        <Entry Placeholder="Введите пароль"
                               Text="{Binding Password}"
                               IsPassword="True"/>
                    </VerticalStackLayout>

                   
                    <Button Text="Войти"
                            BackgroundColor="#007ACC"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="10"
                            Padding="20,12"
                            Command="{Binding LoginCommand}"/>

                
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotEmptyConverter}}"/>

                </VerticalStackLayout>

            </Frame>

         
            <Frame BackgroundColor="Transparent"
                   BorderColor="Transparent"
                   Padding="0">

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Нет аккаунта?" FontSize="14"/>
                    <Button Text="Зарегистрироваться"
                            TextColor="#007ACC"
                            BackgroundColor="Transparent"
                            FontSize="14"
                            Command="{Binding RegisterCommand}"/>
                </HorizontalStackLayout>

            </Frame>

            
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                               Color="#007ACC"
                               HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>