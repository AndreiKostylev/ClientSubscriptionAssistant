<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientSubscriptionAssistant.Views.RegisterPage"
             Title="Регистрация">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <!-- Заголовок -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Регистрация"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#007ACC"/>
                <Label Text="Создайте новый аккаунт"
                       FontSize="14"
                       TextColor="Gray"/>
            </VerticalStackLayout>

            <!-- Форма регистрации -->
            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <!-- Имя пользователя -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Имя пользователя" FontSize="14"/>
                        <Entry x:Name="UsernameEntry"
                               Placeholder="ivanov"
                               Text="{Binding Username}"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" FontSize="14"/>
                        <Entry x:Name="EmailEntry"
                               Placeholder="ivanov@example.com"
                               Text="{Binding Email}"
                               Keyboard="Email"/>
                    </VerticalStackLayout>

                    <!-- Пароль -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Пароль" FontSize="14"/>
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Минимум 6 символов"
                               Text="{Binding Password}"
                               IsPassword="True"/>
                    </VerticalStackLayout>

                    <!-- Подтверждение пароля -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Подтверждение пароля" FontSize="14"/>
                        <Entry x:Name="ConfirmPasswordEntry"
                               Placeholder="Повторите пароль"
                               Text="{Binding ConfirmPassword}"
                               IsPassword="True"/>
                    </VerticalStackLayout>

                    <!-- Кнопка регистрации -->
                    <Button x:Name="RegisterButton"
                            Text="Зарегистрироваться"
                            BackgroundColor="#28A745"
                            TextColor="White"
                            FontSize="16"
                            CornerRadius="10"
                            Padding="20,12"
                            Command="{Binding RegisterCommand}"/>

                    <!-- Сообщение об ошибке -->
                    <Label x:Name="ErrorLabel"
                           Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotEmptyConverter}}"/>

                </VerticalStackLayout>

            </Frame>

            <!-- Ссылка на вход -->
            <Frame BackgroundColor="Transparent"
                   BorderColor="Transparent"
                   Padding="0">

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Label Text="Уже есть аккаунт?" FontSize="14"/>
                    <Button Text="Войти"
                            TextColor="#007ACC"
                            BackgroundColor="Transparent"
                            FontSize="14"
                            Command="{Binding NavigateToLoginCommand}"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Индикатор загрузки -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="{Binding IsBusy}"
                               Color="#007ACC"
                               HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>