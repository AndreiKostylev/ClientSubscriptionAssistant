<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientSubscriptionAssistant.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">

       
            <Label Text="Мои подписки"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

          
            <Frame BackgroundColor="LightGray"
                   CornerRadius="10"
                   Padding="15">
                <Label Text="Статистика загружается..."
                       HorizontalOptions="Center"/>
            </Frame>

        
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Ваши подписки"
                           FontSize="18"
                           FontAttributes="Bold"/>

                  
                    <VerticalStackLayout x:Name="SubscriptionsContainer"
                                         Spacing="10">
                        <Label Text="Подписки будут здесь"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </Frame>

          
            <Frame BackgroundColor="White"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">

                <VerticalStackLayout Spacing="10">
                    <Label Text="Категории"
                           FontSize="18"
                           FontAttributes="Bold"/>

              
                    <VerticalStackLayout x:Name="CategoriesContainer"
                                         Spacing="10">
                        <Label Text="Категории будут здесь"
                               HorizontalOptions="Center"
                               TextColor="Gray"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>

            </Frame>

         
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="Добавить"
                        BackgroundColor="Blue"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="15,10"/>

                <Button Text="Обновить"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="10"
                        Padding="15,10"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
