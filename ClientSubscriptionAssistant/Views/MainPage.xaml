<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientSubscriptionAssistant.MainPage"
             Title="Главная">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">

        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="15">

                <Label Text="Мои подписки"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

               
                <Frame BackgroundColor="LightBlue"
                       CornerRadius="10"
                       Padding="15">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding UserName}"
                               FontSize="16"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding TotalSubscriptions}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                                <Label Text="Всего"
                                       FontSize="12"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding MonthlyCost}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"/>
                                <Label Text="В месяц"
                                       FontSize="12"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

               
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Ваши подписки"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <CollectionView ItemsSource="{Binding Subscriptions}"
                                        SelectionMode="None"
                                        HeightRequest="250">

                            <CollectionView.EmptyView>
                                <VerticalStackLayout HorizontalOptions="Center" 
                                                     VerticalOptions="Center"
                                                     Padding="20"
                                                     Spacing="10">
                                    <Label Text="📭" 
                                           FontSize="40"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Нет подписок" 
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"/>
                                    <Label Text="Войдите, чтобы увидеть свои подписки" 
                                           FontSize="14"
                                           TextColor="Gray"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#F0F8FF"
                                           CornerRadius="8"
                                           Padding="10"
                                           Margin="0,0,0,5">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Price, StringFormat='Цена: {0:C}'}"
                                                   FontSize="14"
                                                   TextColor="Gray"/>
                                            <Label Text="{Binding NextPaymentDate, StringFormat='След. оплата: {0:dd.MM.yyyy}'}"
                                                   FontSize="12"
                                                   TextColor="DarkGray"/>
                                            <Label Text="{Binding Service.Name, StringFormat='Сервис: {0}'}"
                                                   FontSize="12"
                                                   TextColor="DarkGray"/>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

               
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       Padding="15"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Категории"
                               FontSize="18"
                               FontAttributes="Bold"/>

                        <CollectionView ItemsSource="{Binding Categories}"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="#E8F5E9"
                                           CornerRadius="8"
                                           Padding="10"
                                           Margin="0,0,0,5">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Description}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

               
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">

                    <Button Text="Вход"
                            BackgroundColor="Green"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="10"
                            Command="{Binding NavigateToLoginCommand}"/>

                    <Button Text="Подписки"
                            BackgroundColor="Blue"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="10"
                            Grid.Column="1"
                            Command="{Binding NavigateToSubscriptionsCommand}"/>

                    <Button Text="Профиль"
                            BackgroundColor="Purple"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="10"
                            Grid.Column="2"
                            Command="{Binding NavigateToProfileCommand}"/>

                </Grid>

               
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">

                    <Button Text="Регистрация"
                            BackgroundColor="Orange"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="15,10"
                            Command="{Binding NavigateToRegisterCommand}"/>

                    <Button Text="Обновить"
                            BackgroundColor="Gray"
                            TextColor="White"
                            CornerRadius="10"
                            Padding="15,10"
                            Grid.Column="1"
                            Command="{Binding RefreshCommand}"/>

                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </RefreshView>

</ContentPage>