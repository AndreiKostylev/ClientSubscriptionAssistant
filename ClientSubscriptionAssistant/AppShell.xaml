<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClientSubscriptionAssistant.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClientSubscriptionAssistant"
    xmlns:Views="clr-namespace:ClientSubscriptionAssistant.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Subscription Assistant">


    <FlyoutItem Title="Главная" Icon="home.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>


    <FlyoutItem Title="Вход" Icon="login.png">
        <ShellContent
            Title="Вход"
            ContentTemplate="{DataTemplate Views:LoginPage}"
            Route="LoginPage" />
    </FlyoutItem>

    <FlyoutItem Title="Регистрация" Icon="register.png">
        <ShellContent
            ContentTemplate="{DataTemplate Views:RegisterPage}"
            Route="RegisterPage" />
    </FlyoutItem>


    <FlyoutItem Title="Мои подписки" Icon="subscription.png">
        <ShellContent
            ContentTemplate="{DataTemplate Views:SubscriptionPage}"
            Route="SubscriptionPage" />
    </FlyoutItem>

    <FlyoutItem Title="Профиль" Icon="profile.png">
        <ShellContent
            ContentTemplate="{DataTemplate Views:ProfilePage}"
            Route="ProfilePage" />
    </FlyoutItem>

</Shell>